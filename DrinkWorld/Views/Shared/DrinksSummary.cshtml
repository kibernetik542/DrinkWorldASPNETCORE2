@model Drink

<div class="col-sm-4 col-lg-4 col-md-4">
    <div>
        <img src="@Model.ImageThumbnailUrl" alt="" class="img-responsive center-block img-circle" />
        <div>
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a>@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
    </div>

</div>
